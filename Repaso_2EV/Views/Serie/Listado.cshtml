@model IEnumerable<Repaso_2EV.Models.SerieModelo>

@{
    ViewData["Title"] = "Listado";
}

<h1>Listado</h1>


<p>
    <a asp-action="Create">Create New Serie</a>
    <a asp-action="Create" asp-controller="Marca">Create New Marca</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom_Serie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nom_Serie)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca.Nom_Marca)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>