@page
@using Modelos;
@model FrutaPrueba.Pages.Fruterias.EditModel
@{
	var titulo = Model.fruteria.nombre;
	var photo = "~/images/" +(Model.fruteria.foto ?? "noimage.jpg");
}

<h1>Edicion de datos de @titulo</h1>
<form method="post" class="mt-3" enctype="multipart/form-data">

    <input type="hidden" asp-for="fruteria.id" />
    <input type="hidden" asp-for="fruteria.foto" id="lafoto" />


    <div class="form-group row">
        <label asp-for="fruteria.nombre" class="col-sm-2 col-form-label">Nombre de la Fruteria</label>
        <div class="col-sm-10">
            <input asp-for="fruteria.nombre" class="form-control" placeholder="Nombre" />
            <span asp-validation-for="fruteria.nombre" class="text-danger"></span>
        </div>
    </div>

    

    

    <div class="form-group row">
        <label asp-for="fruteria.fruta" class="col-sm-2 col-form-label">Fruta:</label>
        <div class="col-sm-10">
            <select asp-for="fruteria.fruta" class="form-select mb-3" asp-items="Html.GetEnumSelectList<Fruta>()">
                <option value="Selecciona uno">Selecciona uno</option>
            </select>
            <span asp-validation-for="fruteria.fruta" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Photo" class="custom-file-input" type="file" value="@Model.fruteria.foto" onchange="lafoto.value = this.value.substring(this.value.lastIndexOf('\\')+1)" />
            <label class="custom-file-label">Click aquí para cambiar foto</label>
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbail" src="@photo" asp-append-version="true" />
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Alumnos/Index" class="btn btn-promary">Cancel</a>
        </div>
    </div>









</form>
